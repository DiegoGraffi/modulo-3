<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/register.css" />
  </head>
  <body>
    <header><%- include('./partials/header.ejs') %></header>
    <div class="content">
      <div class="img-container">
        <img src="./Images/banner.png" class="background-img" />
      </div>

      <div class="section-container">
        <section class="register-container">
          <h3 class="register-title">Registrarse</h3>
          <form class="register-form" action="/register" method="POST">
            <div class="inputs-container">
              <div class="input-container">
                <label for="name" class="register-label">Nombre</label>
                <input
                  id="name"
                  name="name"
                  class="register-input"
                  type="text"
                  required
                  placeholder="Ingrese su nombre"
                  value="<% if(typeof valores != 'undefined') { %><%= valores.name %><%}%>"
                />
              </div>

              <div class="input-container">
                <label for="lastName" class="register-label">Apellido</label>
                <input
                  id="lastName"
                  name="lastName"
                  class="register-input"
                  type="text"
                  required
                  placeholder="Ingrese su apellido"
                  value="<% if(typeof valores != 'undefined') { %><%= valores.lastName %><%}%>"
                />
              </div>
            </div>

            <div class="inputs-container">
              <div class="input-container">
                <label for="email" class="register-label">Email</label>
                <input
                  id="email"
                  name="email"
                  class="register-input"
                  type="email"
                  required
                  placeholder="Ingrese su email"
                  value="<% if(typeof valores != 'undefined') { %><%= valores.email %><%}%>"
                />
              </div>

              <div class="input-container">
                <label for="date" class="register-label"
                  >Fecha de Nacimiento</label
                >
                <input
                  id="date"
                  name="date"
                  class="register-input"
                  type="date"
                  required
                  value="<% if(typeof valores != 'undefined') { %><%= valores.date %><%}%>"
                />
              </div>
            </div>

            <div class="inputs-container">
              <div class="input-container">
                <label for="password" class="register-label">Contrase単a</label>
                <input
                  id="password"
                  name="password"
                  class="register-input"
                  type="password"
                  required
                  placeholder="Ingrese su contrase単a"
                  value="<% if(typeof valores != 'undefined') { %><%= valores.password %><%}%>"
                />
              </div>

              <div class="input-container">
                <label for="repeatPassword" class="register-label"
                  >Repetir Contrase単a</label
                >
                <input
                  id="repeatPassword"
                  name="repeatPassword"
                  class="register-input"
                  type="password"
                  required
                  placeholder="Ingrese nuevamente su contrase単a"
                  value="<% if(typeof valores != 'undefined') { %><%= valores.repeatPassword %><%}%>"
                />
              </div>
            </div>

            <button class="register-button" type="submit">Registrarse</button>
          </form>

          <% if(typeof validaciones != 'undefined') { %> <%
          validaciones.forEach( (validacion) => { %>
          <div class="validacion-container">
            <p class="validacion-message"><%= validacion.msg %></p>
          </div>
          <% })%> <% } %>
        </section>
        <div class="image-container-desktop">
          <img src="./Images/banner.png" class="background-img-desktop" />
        </div>
      </div>
    </div>

    <footer class="footer"><%- include('./partials/footer.ejs') %></footer>
  </body>
</html>
